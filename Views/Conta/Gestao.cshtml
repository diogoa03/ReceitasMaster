@using ReceitasMaster.Models
@model IEnumerable<Conta>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/mySheet.css" />
    <title>Gestão de Utilizadores - ReceitasMaster</title>
</head>
<body>

    <h1>👥 Gestão de Utilizadores</h1>

    <div class="card">
        <p>🏠 <a href="/Receita/Index">Voltar às Receitas</a></p>
        <p>🚪 <a href="/Conta/Logout">Terminar Sessão</a></p>
    </div>

    <table>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th class="center">Nível de Acesso</th>
            <th class="center">Status</th>
            <th class="center">Data de Registo</th>
            <th class="center">Operações</th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td class="center">
                    @switch (item.NivelAcesso) {
                        case 0:
                            <span class="badge badge-gray">Visitante</span>
                            break;
                        case 1:
                            <span class="badge badge-blue">Autor</span>
                            break;
                    }
                </td>
                <td class="center">
                    @if (item.Ativa) {
                        <span class="badge badge-green">Ativo</span>
                    }
                    else {
                        <span class="badge badge-red">Inativo</span>
                    }
                </td>
                <td class="center">@item.DthrRegisto.ToString("dd/MM/yyyy")</td>
                <td class="center">
                    @if (item.Ativa) {
                        <a href="/Conta/AlterarStatus/@item.GuidConta?ativo=false" class="btn-small btn-danger">Desativar</a>
                    }
                    else {
                        <a href="/Conta/AlterarStatus/@item.GuidConta?ativo=true" class="btn-small btn-success">Ativar</a>
                    }
                </td>
            </tr>
        }
    </table>

    <div class="user-info">
        👤 Utilizador: @ViewBag.Conta.Nome &nbsp; | &nbsp; ✉️ Contacto: @ViewBag.Conta.Email
    </div>

</body>
</html>